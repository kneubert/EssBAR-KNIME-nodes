			<ITEM name="accver" value="1" type="int" description="Version to put in Genbank file." restrictions="1:" required="false" advanced="false" />
			<ITEM name="genus" value="Genus" type="string" description="Genus name" required="false" advanced="false" />
			<ITEM name="species" value="species" type="string" description="Species name" required="false" advanced="false" />
			<ITEM name="strain" value="strain" type="string" description="Strain name" required="false" advanced="false" />
			<ITEM name="plasmid" value="" type="string" description="Plasmid name or identifier" required="false" advanced="false" />
