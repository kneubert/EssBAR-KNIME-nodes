			<ITEM name="increment" value="1" type="int" description="Locus tag counter increment" restrictions="1:" required="false" advanced="false" />
			<ITEM name="gffver" value="3" type="int" description="GFF version (default '3')" restrictions="1:" required="false" advanced="false" />
