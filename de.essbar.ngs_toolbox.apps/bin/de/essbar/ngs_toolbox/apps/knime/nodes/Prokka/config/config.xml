			<ITEM name="evalue" value="1e-06" type="float" description="Similarity e-value cut-off" restrictions="0:" required="false" advanced="true" />
			<ITEM name="rfam" value="false" type="string" description="Enable searching for ncRNAs with Infernal+Rfam (SLOW!)." restrictions="true,false" required="false" advanced="true" />
			<ITEM name="norrna" value="false" type="string" description="Don't run rRNA search (default OFF)." restrictions="true,false" required="false" advanced="true" />
			<ITEM name="notrna" value="false" type="string" description="Don't run tRNA search (default OFF)." restrictions="true,false" required="false" advanced="true" />
			<ITEM name="rnammer" value="false" type="string" description="Prefer RNAmmer over Barrnap for rRNA prediction (default OFF)." restrictions="true,false" required="false" advanced="true" />																																																																																														
