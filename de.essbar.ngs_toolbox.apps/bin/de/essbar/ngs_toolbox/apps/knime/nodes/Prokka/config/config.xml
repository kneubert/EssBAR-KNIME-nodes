		<NODE name="prokka" description="Prokka: rapid prokaryotic genome annotation">
			<ITEM name="version" value="false" type="string" description="Print version and exit." restrictions="true,false" required="false" advanced="false" />
			<ITEM name="debug" value="false" type="string" description="Debug mode: keep all temporary files." restrictions="true,false" required="false" advanced="false" />
			<ITEM name="listdb" value="false" type="string" description="List all configured databases." restrictions="true,false" required="false" advanced="false" />
			<ITEM name="setupdb" value="false" type="string" description="Index all installed databases." restrictions="true,false" required="false" advanced="false" />
			<ITEM name="cleandb" value="false" type="string" description="Remove all database indices." restrictions="true,false" required="false" advanced="false" />
			<ITEM name="prefix" value="" type="string" description="Filename output prefix" required="false" advanced="false" />
			<ITEM name="addgenes" value="false" type="string" description="Add 'gene' features for each 'CDS' feature." restrictions="true,false" required="false" advanced="false" />
			<ITEM name="addmrna" value="false" type="string" description=" Add 'mRNA' features for each 'CDS' feature." restrictions="true,false" required="false" advanced="false" />
