			<ITEM name="gram" value="" type="string" description="Gram: -/neg +/pos" required="false" advanced="true" />
			<ITEM name="usegenus" value="false" type="string" description="Use genus-specific BLAST databases (needs --genus)." restrictions="true,false" required="false" advanced="false" />
			<ITEM name="metagenome" value="false" type="string" description="Improve gene predictions for highly fragmented genomes." restrictions="true,false" required="false" advanced="false" />
			<ITEM name="rawproduct" value="false" type="string" description="Do not clean up /product annotation." restrictions="true,false" required="false" advanced="true" />
			<ITEM name="cdsrnaolap" value="false" type="string" description="Allow [tr]RNA to overlap CDS." restrictions="true,false" required="false" advanced="true" />
			<ITEM name="cpus" value="8" type="int" description="Number of CPUs to use [0=all]." restrictions="0:" required="false" advanced="true" />
			<ITEM name="fast" value="false" type="string" description="Fast mode - skip CDS /product searching." restrictions="true,false" required="false" advanced="true" />
			<ITEM name="noanno" value="false" type="string" description="For CDS just set product='unannotated protein'." restrictions="true,false" required="false" advanced="true" />
